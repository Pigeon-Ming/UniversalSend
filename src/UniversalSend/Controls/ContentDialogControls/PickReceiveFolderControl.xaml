<UserControl
    x:Class="UniversalSend.Controls.ContentDialogControls.PickReceiveFolderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalSend.Controls.ContentDialogControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="在开始使用UniversalSend前，&#x000A;请点击下面按钮选择一个文件夹用于保存接收的文件" TextWrapping="Wrap"/>
        <Button HorizontalAlignment="Center" Grid.Row="1" Content="选择文件夹" Name="OpenPickerButton" Click="OpenPickerButton_Click"/>
    </Grid>
</UserControl>
