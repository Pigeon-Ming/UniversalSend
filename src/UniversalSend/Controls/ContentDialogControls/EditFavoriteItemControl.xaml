<UserControl
    x:Class="UniversalSend.Controls.ContentDialogControls.EditFavoriteItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalSend.Controls.ContentDialogControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel>
        <TextBlock Style="{ThemeResource TitleTextBlockStyle}" Name="TitleTextBlock"/>
        <TextBlock Text="设备名称"/>
        <TextBox Name="DeviceNameTextBox"/>
        <TextBlock Text="IP地址"/>
        <TextBox Name="IPAddrTextBox"/>
        <TextBlock Text="端口号"/>
        <TextBox Name="PortTextBox"/>
        <Button Content="删除" Name="DeleteButton" Margin="0,4,0,0" Background="Transparent" Foreground="Red" Click="DeleteButton_Click"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Right"  Margin="0,8,0,0">
            <Button Content="取消" Name="CancelButton" Click="CancelButton_Click" Margin="0,0,4,0"/>
            <Button Content="保存" Name="SaveButton" Click="SaveButton_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>
